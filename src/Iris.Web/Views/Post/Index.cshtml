                <span data-href="@Url.Action("DisLike", "Post", new { id = Model.Id })">به درد نمی خوره</span>
            </div>
        </div>
        <!-- end post-book-like div -->
        <div id="post-book-share-wrapper" class="span3">
            <div id="post-book-share">
                <div>
