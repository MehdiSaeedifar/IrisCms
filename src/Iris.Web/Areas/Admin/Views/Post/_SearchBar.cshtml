@using (Html.AjaxBeginForm("Search", "User", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "user-table", OnBegin = "showLoading", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading" }))
{
    <input type="text" id="term" placeholder="جست و جو" class="search-query" data-autocomplete="@Url.Action("AutoCompleteSearch", "User")" data-filter="UserName" data-min-length="1">
    <input type="submit" name="btnSubmit" value="جست و جو" class="btn btn-info" />
    <button data-slide-toggle-id="#search-types" class="btn">پیشرفته</button>
    <div id="search-types" style="display: none;">
        <label class="radio">
            <input type="radio" name="by" id="optionsRadios1" value="UserName" checked>
            نام کاربری
        </label>
        <label class="radio">
            <input type="radio" name="by" id="optionsRadios1" value="UserId">
            کد کاربری
        </label>
        <label class="radio">
            <input type="radio" name="by" id="optionsRadios1" value="FullName">
            نام و نام خانوادگی
        </label>
    </div>
}