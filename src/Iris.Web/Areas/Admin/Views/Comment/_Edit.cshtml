@model Iris.Model.AdminModel.EditCommentModel
<div class="container-fluid" id="div-user-detail">
    @using (Html.AjaxBeginForm("Edit", "Comment", new AjaxOptions { UpdateTargetId = "result", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnBegin = "showLoading", OnComplete = "hideLoading" }, new { @class = "form-horizontal", id = "add-label-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(comment => comment.Id)
        <div class="control-group">
            <label class="" for="Body">متن دیدگاه</label>
            <div class="controls" style="margin-right: 0px">
                @Html.TextAreaFor(comment => comment.Body, new { style = "height:150px;" })
            </div>
            @Html.ValidationMessageFor(comment => comment.Body)
        </div>
        
        <div id="result"></div>
        <input type="submit" name="btn-submit" value="انجام ویرایش" class="btn btn-success" />
        <input type="button" name="btn-colose" id="btn-close" value="انصراف" class="btn btn-danger" onclick="$dialog.dialog('close');" />
    }
</div>
<script>
    run(function () { loadRedactor('#Body'); });
</script>
